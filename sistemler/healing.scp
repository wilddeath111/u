findid.i_mageryfix.remove


[function checkhealing]
if ((<skilllock[17]> == 0) && (<skilltotal> < <skillclass.skillsum>))
	if (<healing> < 30.0)
			healing (<healing> + 1)
	elseif (<healing> < 50.0)
			healing (<healing> + 1)
	elseif (<healing> < 75.0)
			healing (<healing> + 1)
	elseif (<healing> < 100.0)
			healing (<healing> + 1)
	endif
endif

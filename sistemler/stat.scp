// Eventz

[events e_spr]
On=@SkillStart
if !(<findlayer(32)> || <findlayer(44)> || <findlayer(47)>)
	modstr
	moddex
	modint
	str <tag.ostr>
	int <tag.oint>
	dex <tag.odex>
endif

On=@EnvironChange
if !(<findlayer(32)> || <findlayer(44)> || <findlayer(47)>)
	if !(<eval (<str> + <int> + <dex>)> == <skillclass.statsum>)
	events -e_spr
	syshata Stat'larınız artık korunmuyor.
	tag.ostr
	tag.oint
	tag.odex
	statlock[str] 0
	statlock[dex] 0
	statlock[int] 0
	update
	endif
endif

[events e_str]
On=@SkillStart
if !(<findlayer(32)> || <findlayer(44)> || <findlayer(47)>)
	if (<eval (<str> + <int> + <dex>)> > <skillclass.statsum>)
		statcapstr
	endif
endif

[events e_dex]
On=@SkillStart
if !(<findlayer(32)> || <findlayer(44)> || <findlayer(47)>)
	if (<eval (<str> + <int> + <dex>)> > <skillclass.statsum>)
		statcapdex
	endif
endif

[events e_int]
On=@SkillStart
if !(<findlayer(32)> || <findlayer(44)> || <findlayer(47)>)
	if (<eval (<str> + <int> + <dex>)> > <skillclass.statsum>)
		statcapint
	endif
endif

// Functionz

[function statcapstr]
if (<str> > 25)
	modstr
	str -=1
	if (<eval (<str> + <int> + <dex>)> > <skillclass.statsum>)
		statcapstr
	endif
endif

[function statcapdex]
if (<dex> > 25)
	moddex
	dex -=1
	if (<eval (<str> + <int> + <dex>)> > <skillclass.statsum>)
		statcapdex
	endif
endif

[function statcapint]
if (<int> > 25)
	modint
	int -=1
	if (<eval (<str> + <int> + <dex>)> > <skillclass.statsum>)
		statcapint
	endif
endif


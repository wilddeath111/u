return 1
endif
if (<findlayer(32)> || <findlayer(44)> || <findlayer(47)>)
syshata Statlarınızı etkileyen bir büyünün etkisi altındayken bu seçeneği kullanamazsınız.
return 1
endif

stchk
sdialog d_stat

[function stchk]
if !(<findlayer(32)> || <findlayer(44)> || <findlayer(47)>)
	if (<dex>!=<maxstam>)
	maxstam
	endif
	if (<int>!=<maxmana>)
	maxmana
	endif
	if (<str>!=<maxhits>)
	maxhits
	endif
	if (<str> > 100)
		modstr
		str 100
	elseif (<dex> > 100)
		moddex
		dex 100
	elseif (<int> > 100)
		modint
		int 100
	endif
endif


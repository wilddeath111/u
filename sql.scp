	DB.QUERY "SELECT user,pin FROM accxshadetb WHERE user='<LOCAL.USER>'"
	if (<DB.ROW.NUMROWS> > 0)
	SERV.ACCOUNT <DB.ROW.0.0> TAG0.PIN <dDB.ROW.0.1>
 	endif

